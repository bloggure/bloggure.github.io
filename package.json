{
  "name": "bloggure.github.io",
  "version": "1.0.0",
  "description": "Modern Jekyll blog with updated build system",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm run build:js && npm run build:css",
    "build:js": "uglifyjs assets/js/plugins/*.js assets/js/_*.js -o assets/js/scripts.min.js -c -m",
    "build:css": "postcss assets/css/main.css -o assets/css/main.min.css --use autoprefixer",
    "watch": "npm run watch:js & npm run watch:css",
    "watch:js": "chokidar 'assets/js/plugins/*.js' 'assets/js/_*.js' -c 'npm run build:js'",
    "watch:css": "chokidar 'assets/css/*.css' -c 'npm run build:css'",
    "optimize:images": "npx imagemin 'images/**/*.{png,jpg,jpeg}' --out-dir=images",
    "optimize:svg": "npx svgo images/**/*.svg"
  },
  "keywords": [
    "jekyll",
    "blog",
    "modern"
  ],
  "author": "Cedric Gatay",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "chokidar-cli": "^3.0.0",
    "grunt": "^1.6.1",
    "imagemin": "^8.0.0",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^10.0.0",
    "postcss": "^8.4.47",
    "postcss-cli": "^10.0.0",
    "svgo": "^3.3.2",
    "uglify-js": "^3.19.3",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4",
    "babel-loader": "^9.1.3",
    "@babel/core": "^7.25.8",
    "@babel/preset-env": "^7.25.8",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10"
  }
}
